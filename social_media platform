# Folder: frontend/main.js
fetch('http://localhost:3000/posts/feed')
  .then(res => res.json())
  .then(posts => {
    const feed = document.getElementById('feed');
    posts.forEach(post => {
      const div = document.createElement('div');
      div.innerHTML = `<p>${post.content}</p><hr>`;
      feed.appendChild(div);
    });
  });


